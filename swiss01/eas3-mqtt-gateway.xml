<?xml version="1.0"?>
<Container version="1">
  <Name>eas3-mqtt-Gateway</Name>
  <Repository>docker.io/swiss01/eas3-mqtt:latest</Repository>
  <Registry>https://hub.docker.com/r/swiss01/eas3-mqtt/</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support/>
  <Project>https://github.com/sr258/eas3-mqtt</Project>
  <Overview>The EAS 3 MQTT Gateway is a NodeJS application that publishes the status (e.g., boiler room temperature or combustion status) of a Brunner EAS 3 electronic combustion controller to an MQTT broker. This allows this data to be used in a home automation system such as Home Assistant.</Overview>
  <Category>HomeAutomation:</Category>
  <WebUI/>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/swiss01/unraid-templates/refs/heads/main/swiss01/images/eas3-mqtt-gateway.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1757190049</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="EAS3_BROADCAST_PORT" Target="45454" Default="45454" Mode="udp" Description="" Type="Port" Display="always" Required="true" Mask="false">45454</Config>  
  <Config Name="MQTT_HOST" Target="MQTT_HOST" Default="" Mode="" Description="" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="MQTT_PORT" Target="MQTT_PORT" Default="" Mode="" Description="" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="MQTT_USERNAME" Target="MQTT_USERNAME" Default="" Mode="" Description="" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="MQTT_PASSWORD" Target="MQTT_PASSWORD" Default="" Mode="" Description="" Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="MQTT_AUTODISCOVERY_FREQUENCY" Target="MQTT_AUTODISCOVERY_FREQUENCY" Default="10" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false">10</Config>
  <Config Name="MQTT_AUTODISCOVERY_DISABLED" Target="MQTT_AUTODISCOVERY_DISABLED" Default="false" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false">false</Config>
  <Config Name="EAS3_MQTT_DEVICE_PREFIX" Target="EAS3_MQTT_DEVICE_PREFIX" Default="eas3_" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false">eas3_</Config>
  <TailscaleStateDir/>

</Container>
